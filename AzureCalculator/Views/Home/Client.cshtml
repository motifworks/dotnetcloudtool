@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>MotifWorks Clould Tool</title>
    <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="shortcut icon" type="~/Image/x-icon" href="~/Images/favicon.ico" />
</head>
<body>
    <div id="wrapper">
        <header id="header" style="display: none;">
            <div class="container-fluid">
                <!-- <div class="col-xs-12"> -->
                    <a href="/" class="logo pull-left" id="ISVLink" target="_blank"><img id="imgLogo" src="" alt=""></a>
                <!-- </div> -->
            </div>
        </header>
        <main role="main" id="main" style="display: none;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <h1 id="ISVName"></h1>
                        <div id="ISVDescription"></div>
                    </div>
                </div>
                <div class="row available">
                    <div class="col-xs-12">
                        <div class="row" id="createdDrives"></div>
                    </div>
                </div>
            </div>
        </main>
        <footer id="footer" style="display: none;">
            <div class="container-fluid">
                <div class="col-xs-12">
                    <aside class="powered pull-right">
                        <span class="text">Powered by | </span>
                        <a href="#" class="motifworks"></a>
                    </aside>
                </div>
            </div>
        </footer>
    </div>    
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/app.js"></script>

<script>
    $(document).ready(function () {
        loader();
        setTimeout(function () { 
            renderISV(@ViewBag.ISVId);
        }, 500);
    });
</script>
</body>
</html>
